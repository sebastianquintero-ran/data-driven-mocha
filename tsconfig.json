{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"

  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.tsx",
    "src/__test__/setupTest.js",
    "src/__test__/App.test.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
