{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "lib": ["esnext"],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.tsx",
    "src/__test__/setupTest.ts",
    "src/__test__/App.test.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}